{
	"extends": "@tmlmobilidade/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/*"],
			"@test/*": ["./test/*"]
		},
		"strictNullChecks": true,
		"types": ["jest", "node"]
	},
	"include": ["src/**/*.ts", "test/**/*.ts", "tsup.config.ts", "tsup-types.config.ts"],
	"exclude": ["node_modules", "dist"]
}
